        </div>
      </form>
      
      <script>
        var form = document.getElementById('sheetdb-form');
        form.addEventListener("submit", e => {
          e.preventDefault();
          fetch(form.action, {
              method : "POST",
              body: new FormData(document.getElementById("sheetdb-form")),
          }).then(
              response => response.json()
          ).then((html) => {
              //email code
            alert('Vielen Dank für Ihre Vorbestellung!')
          });
        });
      </script>

